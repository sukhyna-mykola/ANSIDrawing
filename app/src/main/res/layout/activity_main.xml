<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mykola.devchallenge.com.ansidrawing.activitys.MainActivity">

    <FrameLayout
        android:id="@+id/layers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <GridLayout
        android:visibility="gone"
        android:id="@+id/presetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/presetScaleMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/zoom_minus" />

        <ImageButton
            android:id="@+id/presetScalePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/zoom_plus" />

        <ImageButton
            android:id="@+id/presetRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/rotate" />

        <android.support.v4.widget.Space android:layout_gravity="fill_horizontal" />

        <ImageButton
            android:id="@+id/presetConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/ic_check_black_24dp" />

        <ImageButton
            android:id="@+id/presetCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/cancel" />


    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/preset_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preser" />

                <ImageView
                    android:id="@+id/preset_image"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tool_size_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIZE TOOL" />

                <TextView
                    android:id="@+id/tool_size_text"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/symbol_size_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="size symbol" />

                <TextView
                    android:id="@+id/symbol_size_text"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tool_color_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COLOR" />

                <ImageView
                    android:id="@+id/tool_color_image"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tool_symbol_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SYNBOL" />

                <TextView
                    android:id="@+id/tool_symbol_text"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tool_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TYPE" />

                <ImageView
                    android:id="@+id/tool_type_image"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>
